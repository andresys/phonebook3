<% content_for :side do %>
  <div class="flex tall:pb-10 pb-0 px-4 mx-auto max-w-screen-xl w-full text-gray-700 gap-6 min-h-[calc(100vh_-_80px)]">
    <aside class="max-w-[33.333333%] basis-1/3 lg:max-w-[25%] lg:basis-1/4 hidden md:block px-4 bg-gray-50">
      <%= render "side_panel" %>
    </aside>
    <main class="md:max-w-[66.666666%] md:basis-2/3 lg:max-w-[75%] lg:basis-3/4 relative w-full">
      <%= yield %>
    </main>
  </div>
<% end %>

<%= render template: "layouts/application" %>