<%= link_to root_path, class: "link-no-decorate" do %>
  <% if user_signed_in? %>
    <div class="flex items-center">
      <%= image_tag "logo.png", class: "mr-2" %>
      <div class="flex flex-col uppercase">
        <span class="text-[1.4rem] tracking-[2px] leading-[1.5rem]">Телефонный</span>
        <span class="text-[0.7rem] tracking-[8px] leading-[1rem]">справочник</span>
      </div>
    </div>
  <% else %>
    <div class="flex flex-row uppercase items-center justify-center w-full">
      <span class="text-[1.3rem] tracking-[-1px] leading-[1.5rem]">Телефонный</span>
      <%= image_tag "logo.png", class: "mx-1" %>
      <span class="text-[1.3rem] tracking-[-1px] leading-[1.5rem]">справочник</span>
    </div>
  <% end %>
<% end %>